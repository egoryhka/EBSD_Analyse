<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <StackPanel x:Name="DropPanel" AllowDrop="True" Drop="DropPanel_Drop" VerticalAlignment="Top" HorizontalAlignment="Right" Height="100" Width="125" Margin="0,10,10,0" Background="LightGray" >
            <Button x:Name="OpenFileButton" Content="Открыть" Click="OpenFileButton_Click"/>
            <Label Content="Drop EBSD data here" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel Background="LightGray" Height="400" Width="400" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">
            <ScrollViewer Name="scroll" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible"  CanContentScroll="True" Height="400" Width="400">
                <Image x:Name="EBSD_Image" MouseLeftButtonDown="EBSD_Image_MouseLeftButtonDown"/>
            </ScrollViewer>
        </StackPanel>

        <Label Content="Вид изображения:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="117" Margin="410,10,0,0"/>
        <ComboBox x:Name="MapVariantChoose"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="26" SelectionChanged="MapVariantChoose_SelectionChanged" Margin="527,10,0,0" />


        <ProgressBar x:Name="ProgressBar" ValueChanged="ProgressBar_ValueChanged" Minimum="0" Maximum="100" HorizontalAlignment="Stretch" Height="10" VerticalAlignment="Bottom" Visibility="Hidden"/>
        <Button Content="Экстраполяция" x:Name="ExtrapolateButton" HorizontalAlignment="Left" Margin="415,90,0,0" VerticalAlignment="Top" Width="212" Click="ExtrapolateButton_Click"/>
        <Slider HorizontalAlignment="Left" x:Name="ExtrapolateSlider" Value="1" Minimum="0" Maximum="5" IsSnapToTickEnabled="True" Ticks="1,2,3,4,5" Margin="507,63,0,0" TickPlacement="TopLeft" VerticalAlignment="Top" Width="120" />
        <Label  Content="Итераций:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="67" Margin="410,63,0,0" Height="25"/>
        <Label  Content="{Binding ElementName=ExtrapolateSlider, Path=Value}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="25" Margin="482,63,0,0" Height="25"/>

    </Grid>

</Window>
